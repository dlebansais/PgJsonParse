<UserControl x:Class="PgBuilder.InitControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border x:Name="ctrlError1" BorderBrush="{x:Null}" BorderThickness="0" Background="Red" IsHitTestVisible="False">
        <Border.Triggers>
            <EventTrigger RoutedEvent="Border.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation From="0" To="0.3" Storyboard.TargetName="ctrlError1" Storyboard.TargetProperty="(Border.Opacity)" AutoReverse="True" RepeatBehavior="Forever" Duration="0:0:0.5"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>
    </Border>
</UserControl>
