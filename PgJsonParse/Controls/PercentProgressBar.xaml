<UserControl x:Class="CustomControls.PercentProgressBar"
             x:Name="rootPercentProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CustomControls">
    <UserControl.Resources>
        <local:PercentProgressBarPropertyConverter x:Key="convPercentageToMargin"/>
    </UserControl.Resources>
    <Grid>
        <Rectangle Fill="{Binding Foreground, ElementName=rootPercentProgressBar}" Margin="{Binding Value, ElementName=rootPercentProgressBar, Converter={StaticResource convPercentageToMargin}, ConverterParameter=rootPercentProgressBar}"/>
    </Grid>
</UserControl>
